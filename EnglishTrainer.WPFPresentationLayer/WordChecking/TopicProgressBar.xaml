<UserControl x:Class="EnglishTrainer.WPFPresentationLayer.WordChecking.TopicProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishTrainer.WPFPresentationLayer.WordChecking"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="50" Margin="10">
        <ProgressBar Grid.Row="0" Grid.Column="0" x:Name="TopicProgressPercentBar"></ProgressBar>
        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="TopicProgressText" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
