<UserControl x:Class="EnglishTrainer.DesctopClient.Menu.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishTrainer.DesctopClient.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content= "{Binding ButtonTitle}" Click="Button_Click">
            <Button.Margin>10</Button.Margin>
            <Button.Height>60</Button.Height>
        </Button>
    </Grid>
</UserControl>
