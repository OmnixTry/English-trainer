<UserControl x:Class="EnglishTrainer.DesctopClient.TopicAdding.WordToAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnglishTrainer.DesctopClient.TopicAdding"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="EngTrtanslation" Grid.Column="0"></TextBox>
        <TextBox x:Name="UkrTrtanslation" Grid.Column="1"></TextBox>
        <Button x:Name="DeleteButton" Grid.Column="2" Click="Deletebutton_Click">Delete</Button>
    </Grid>
</UserControl>
